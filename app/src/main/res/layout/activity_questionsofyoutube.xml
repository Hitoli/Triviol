<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background_cricket_quiz"
    tools:context=".questionsofyoutube">


    <ScrollView
        android:id="@+id/questionsview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/nav_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#F8C3D3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/questionsview">
                <ImageView
                    android:id="@+id/profilepic"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="4dp"
                    android:layout_gravity="left"
                    android:contentDescription="icon for nav bar"
                    android:src="@drawable/man"
                    >

                </ImageView>
                <TextView
                    android:id="@+id/name_nav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#19388A"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="16dp"
                    android:padding="8dp"
                    android:layout_margin="4dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_vertical"
                    android:text="Hitesh">

                </TextView>
                <TextView
                    android:id="@+id/timerforquestions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#19388A"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="16dp"
                    android:padding="8dp"
                    android:layout_margin="4dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_vertical"
                    android:text="5000">
                </TextView>
                <TextView
                    android:id="@+id/progresstext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Purpleitiis"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="16dp"
                    android:padding="8dp"
                    android:layout_margin="4dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_vertical"
                    android:text="5/11">
                </TextView>



                <ProgressBar
                    android:id="@+id/Progressyoutubebar"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="10dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:max="11"
                    android:indeterminate="false"
                    android:layout_gravity="center"
                    android:minHeight="10dp"
                    android:progress="11"
                    android:rotation="-90"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:progressDrawable="@drawable/color_progressbar">
                </ProgressBar>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/questionsll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:elevation="5dp"
                    app:cardBackgroundColor="@color/whitesmoke"
                    app:cardCornerRadius="16dp">

                    <TextView
                        android:id="@+id/questionstext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/inter_bold"
                        android:padding="60dp"
                        android:text="What is 2020's second most popular YouTuber
                        PewDiePie's real name"
                        android:textAlignment="center"
                        android:textColor="@color/Blackish"
                        android:textSize="21sp">

                    </TextView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/questionsansll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="6dp"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:elevation="1dp"
                    app:cardBackgroundColor="@color/whitesmoke"
                    app:cardCornerRadius="16dp">
                    <TextView
                        android:id="@+id/optionone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/inter_bold"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Rick Sticklebrick"
                        android:textColor="@color/Blackish"
                        android:textSize="22sp">
                    </TextView>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:elevation="1dp"
                    app:cardBackgroundColor="@color/whitesmoke"
                    app:cardCornerRadius="16dp">
                    <TextView
                        android:id="@+id/optiontwo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/inter_bold"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Hendy Bobendy La Forge"
                        android:textColor="@color/Blackish"
                        android:textSize="22sp">
                    </TextView>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:elevation="1dp"
                    app:cardBackgroundColor="@color/whitesmoke"
                    app:cardCornerRadius="16dp">
                    <TextView
                        android:id="@+id/optionthree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/inter_bold"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Jimmy Whispers"
                        android:textColor="@color/Blackish"
                        android:textSize="22sp">
                    </TextView>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:elevation="1dp"
                    app:cardBackgroundColor="@color/whitesmoke"
                    app:cardCornerRadius="16dp">
                    <TextView
                        android:id="@+id/optionfour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/inter_bold"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Felix Arvid Ulf Kjellberg"
                        android:textColor="@color/Blackish"
                        android:textSize="22sp">
                    </TextView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <Button
                    android:id="@+id/ButtonSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:padding="15dp"
                    android:layout_margin="12dp"
                    android:fontFamily="@font/space_grotesk_bold"
                    android:backgroundTint="#F8C3D3"
                    android:text="Submit"
                    android:textColor="@color/black"
                    android:textSize="15sp">

                </Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>