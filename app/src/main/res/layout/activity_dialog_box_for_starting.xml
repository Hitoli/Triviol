<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:layout_gravity="center"
    android:background="@color/whitesmoke"
    tools:context=".Dialog_box_for_starting">
    <ImageView
        android:id="@+id/profilepic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="4dp"
        android:layout_gravity="left"
        android:contentDescription="icon for nav bar"
        android:src="@drawable/man"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/Dialog_overview"
        >

    </ImageView>

    <TextView
        android:id="@+id/Dialog_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profilepic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/space_grotesk"
        android:padding="60dp"
        android:textAlignment="center"
        android:textColor="@color/Blackish"
        android:textSize="24sp"
        android:text="Starting the quiz, Please answer each question in 5 seconds and submit"
        >
    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>