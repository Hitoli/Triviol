                        android:gravity="right"
                        android:layout_gravity="center_vertical"
                        android:text="Easy">

                    </TextView>
                    <TextView
                        android:id="@+id/Quiz_2_no_of_questions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
